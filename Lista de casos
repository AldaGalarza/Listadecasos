import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Tasa de pago por hora
        double tasaHora = 12.0;

        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese las horas trabajadas
        System.out.print("Ingresa las horas trabajadas en la semana: ");
        double horasTrabajadas = scanner.nextDouble();

        // Cerrar el objeto Scanner
        scanner.close();

        // Calcular el salario semanal
        double salarioSemanal = horasTrabajadas * tasaHora;

        // Mostrar el salario por pantalla
        System.out.println("El salario semanal del empleado es: " + salarioSemanal + " euros.");
    }
}

6)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Factor de conversión de Mb a Kb
        int factorConversion = 1024; // 1 Mb = 1024 Kb

        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la cantidad en megabytes (Mb)
        System.out.print("Ingresa la cantidad en megabytes (Mb) que deseas convertir a kilobytes (Kb): ");
        double megabytes = scanner.nextDouble();

        // Cerrar el objeto Scanner
        scanner.close();

        // Realizar la conversión a kilobytes (Kb)
        double kilobytes = megabytes * factorConversion;

        // Mostrar el resultado por pantalla
        System.out.println(megabytes + " Megabytes (Mb) equivalen a " + kilobytes + " Kilobytes (Kb).");
    }
}

7)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la nota del primer examen
        System.out.print("Introduce la nota del primer examen: ");
        double notaPrimerExamen = scanner.nextDouble();

        // Solicitar al usuario que ingrese la nota deseada en el trimestre
        System.out.print("¿Qué nota quieres sacar en el trimestre?: ");
        double notaDeseada = scanner.nextDouble();

        // Calcular la nota necesaria en el segundo examen
        double notaSegundoExamen = (notaDeseada - (0.4 * notaPrimerExamen)) / 0.6;

        // Mostrar el resultado por pantalla
        System.out.println("Para tener un " + notaDeseada + " en el trimestre necesitas sacar un " + notaSegundoExamen + " en el segundo examen.");

        // Cerrar el objeto Scanner
        scanner.close();
    }
}

8)
import java.util.Scanner;

public class SaludoSegunHora {
    public static void main(String[] args) {
        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la hora
        System.out.print("Por favor, ingresa una hora (en formato de 24 horas, sin minutos): ");
        int hora = scanner.nextInt();

        // Cerrar el objeto Scanner
        scanner.close();

        // Determinar el saludo según la hora
        String saludo;
        if (hora >= 6 && hora <= 12) {
            saludo = "Buenos días";
        } else if (hora >= 13 && hora <= 20) {
            saludo = "Buenas tardes";
        } else {
            saludo = "Buenas noches";
        }

        // Mostrar el saludo por pantalla
        System.out.println(saludo);
    }
}

9)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Tasa de pago por hora ordinaria
        double tasaHoraOrdinaria = 12.0;
        
        // Tasa de pago por hora extra
        double tasaHoraExtra = 16.0;

        // Número máximo de horas ordinarias
        int horasOrdinariasMaximas = 40;

        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese las horas trabajadas
        System.out.print("Ingresa las horas trabajadas en la semana: ");
        double horasTrabajadas = scanner.nextDouble();

        // Cerrar el objeto Scanner
        scanner.close();

        // Calcular el salario semanal
        double salarioSemanal = 0.0;

        if (horasTrabajadas <= horasOrdinariasMaximas) {
            // Si las horas trabajadas son menores o iguales a 40, todas son horas ordinarias
            salarioSemanal = horasTrabajadas * tasaHoraOrdinaria;
        } else {
            // Si hay horas extras
            double horasOrdinarias = horasOrdinariasMaximas;
            double horasExtras = horasTrabajadas - horasOrdinariasMaximas;
            salarioSemanal = (horasOrdinarias * tasaHoraOrdinaria) + (horasExtras * tasaHoraExtra);
        }

        // Mostrar el salario por pantalla
        System.out.println("El salario semanal del trabajador es: " + salarioSemanal + " soles.");
    }
}

10)

import java.util.Scanner;
import java.lang.Math;

public class Main {
    public static void main(String[] args) {
        // Gravedad en m/s^2
        double g = 9.81;

        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la altura desde la que cae el objeto
        System.out.print("Ingresa la altura desde la que cae el objeto (en metros): ");
        double altura = scanner.nextDouble();

        // Cerrar el objeto Scanner
        scanner.close();

        // Calcular el tiempo de caída
        double tiempo = Math.sqrt((2 * altura) / g);

        // Mostrar el resultado por pantalla
        System.out.println("El objeto tardará " + tiempo + " segundos en caer desde una altura de " + altura + " metros.");
    }
}

11)

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la hora y los minutos
        System.out.print("Ingresa la hora (0-23): ");
        int horas = scanner.nextInt();

        System.out.print("Ingresa los minutos (0-59): ");
        int minutos = scanner.nextInt();

        // Cerrar el objeto Scanner
        scanner.close();

        // Calcular los segundos hasta la medianoche
        int segundosHastaMedianoche = ((23 - horas) * 3600) + ((59 - minutos) * 60);

        // Mostrar el resultado por pantalla
        System.out.println("Faltan " + segundosHastaMedianoche + " segundos para llegar a la medianoche.");
    }
}

12)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese un número
        System.out.print("Ingresa un número entero: ");
        int numero = scanner.nextInt();

        // Cerrar el objeto Scanner
        scanner.close();

        // Verificar si el número es par y/o divisible por 5
        boolean esPar = (numero % 2 == 0);
        boolean esDivisiblePor5 = (numero % 5 == 0);

        // Mostrar los resultados
        if (esPar && esDivisiblePor5) {
            System.out.println(numero + " es par y divisible por 5.");
        } else if (esPar) {
            System.out.println(numero + " es par pero no es divisible por 5.");
        } else if (esDivisiblePor5) {
            System.out.println(numero + " no es par pero es divisible por 5.");
        } else {
            System.out.println(numero + " no es par ni divisible por 5.");
        }
    }
}

