import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Definir la tasa de conversión de soles a euros
        double tasaDeConversion = 0.113; // 1 sol peruano = 0.113 euros

        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la cantidad de soles peruanos
        System.out.print("Ingresa la cantidad de soles peruanos que deseas convertir: ");
        double cantidadSoles = scanner.nextDouble();

        // Cerrar el objeto Scanner
        scanner.close();

        // Realizar la conversión a euros
        double cantidadEuros = cantidadSoles * tasaDeConversion;

        // Mostrar el resultado por pantalla
        System.out.println(cantidadSoles + " soles peruanos equivalen a " + cantidadEuros + " euros.");
    }
}

