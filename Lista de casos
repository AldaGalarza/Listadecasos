import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese un número entero
        System.out.print("Ingresa un número entero (positivo o negativo, hasta 5 dígitos): ");
        int numero = scanner.nextInt();

        // Cerrar el objeto Scanner
        scanner.close();

        // Convertir el número a positivo si es negativo
        int numeroAbsoluto = Math.abs(numero);

        // Contar los dígitos del número
        int cantidadDigitos = Integer.toString(numeroAbsoluto).length();

        // Mostrar la cantidad de dígitos
        System.out.println("El número " + numero + " tiene " + cantidadDigitos + " dígitos.");
    }
}

14)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Ingresa un día de la semana (lunes a viernes): ");
        String diaSemana = scanner.nextLine();

        System.out.print("Ingresa la hora (horas y minutos, en formato HH:mm): ");
        String horaStr = scanner.nextLine();

        scanner.close();

        int minutosFinDeSemana = 4 * 24 * 60 + 15 * 60;

        switch (diaSemana.toLowerCase()) {
            case "lunes": minutosFinDeSemana -= 24 * 60; break;
            case "martes": minutosFinDeSemana -= 2 * 24 * 60; break;
            case "miércoles": minutosFinDeSemana -= 3 * 24 * 60; break;
            case "jueves": minutosFinDeSemana -= 4 * 24 * 60; break;
            case "viernes": minutosFinDeSemana -= 15 * 60; break;
            default:
                System.out.println("Día de la semana no válido.");
                return;
        }

        String[] partesHora = horaStr.split(":");
        int minutosDesdeInicio = Integer.parseInt(partesHora[0]) * 60 + Integer.parseInt(partesHora[1]);
        int minutosRestantes = minutosFinDeSemana - minutosDesdeInicio;

        if (minutosRestantes < 0) {
            System.out.println("Ya es fin de semana.");
        } else {
            System.out.println("Minutos restantes hasta el fin de semana: " + minutosRestantes + " minutos.");
        }
    }
}

15)

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Combinación de la caja fuerte (número de 4 cifras)
        int combinacion = 1234;
        
        // Número de intentos permitidos
        int intentosMaximos = 4;
        
        // Crear un objeto Scanner para leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Bienvenido a la caja fuerte.");
        
        // Bucle para gestionar los intentos
        for (int intentos = 1; intentos <= intentosMaximos; intentos++) {
            System.out.print("Introduce la combinación de 4 cifras: ");
            int intento = scanner.nextInt();
            
            if (intento == combinacion) {
                System.out.println("La caja fuerte se ha abierto satisfactoriamente.");
                break; // Sale del bucle si la combinación es correcta
            } else {
                System.out.println("Lo siento, esa no es la combinación.");
                
                if (intentos < intentosMaximos) {
                    int intentosRestantes = intentosMaximos - intentos;
                    System.out.println("Te quedan " + intentosRestantes + " intentos.");
                } else {
                    System.out.println("Has agotado tus intentos. La caja fuerte permanece cerrada.");
                }
            }
        }
        
        // Cerrar el scanner
        scanner.close();
    }
}

16)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Crear un objeto Scanner para leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Declarar variables para contar los números positivos y negativos
        int positivos = 0;
        int negativos = 0;

        System.out.println("Ingrese diez números:");

        for (int i = 0; i < 10; i++) {
            System.out.print("Número " + (i + 1) + ": ");
            int numero = scanner.nextInt();

            if (numero > 0) {
                positivos++;
            } else if (numero < 0) {
                negativos++;
            }
        }

        // Cerrar el scanner
        scanner.close();

        // Mostrar el resultado
        System.out.println("Números positivos: " + positivos);
        System.out.println("Números negativos: " + negativos);
    }
}

17)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Crear un objeto Scanner para leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        int contadorNumeros = 0;
        int sumaImpares = 0;
        int mayorPar = Integer.MIN_VALUE;

        System.out.println("Introduce números (introduce un número negativo para finalizar):");

        while (true) {
            System.out.print("Número " + (contadorNumeros + 1) + ": ");
            int numero = scanner.nextInt();

            if (numero < 0) {
                break; // Salir del bucle si se ingresa un número negativo
            }

            contadorNumeros++;

            if (numero % 2 != 0) {
                // Es impar, agregarlo a la suma de impares
                sumaImpares += numero;
            } else {
                // Es par, verificar si es mayor que el mayor número par actual
                if (numero > mayorPar) {
                    mayorPar = numero;
                }
            }
        }

        // Calcular la media de los impares
        double mediaImpares = (contadorNumeros > 0) ? (double) sumaImpares / contadorNumeros : 0.0;

        // Mostrar los resultados
        System.out.println("Se introdujeron " + contadorNumeros + " números.");
        System.out.println("La media de los números impares es: " + mediaImpares);
        
        if (contadorNumeros > 0) {
            System.out.println("El mayor número par es: " + mayorPar);
        } else {
            System.out.println("No se introdujeron números pares.");
        }

        // Cerrar el scanner
        scanner.close();
    }
}







