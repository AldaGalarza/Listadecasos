3)

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Definir la tasa de conversión de euros a pesetas
        double tasaDeConversion = 166.386; // 1 euro = 166.386 pesetas

        // Crear un objeto Scanner para la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Solicitar al usuario que ingrese la cantidad de euros
        System.out.print("Ingresa la cantidad de euros que deseas convertir: ");
        double cantidadEuros = scanner.nextDouble();

        // Cerrar el objeto Scanner
        scanner.close();

        // Realizar la conversión a pesetas
        double cantidadPesetas = cantidadEuros * tasaDeConversion;

        // Mostrar el resultado por pantalla
        System.out.println(cantidadEuros + " euros equivalen a " + cantidadPesetas + " pesetas.");
    }
}


